{
    "source": {
        "include": ["README.md"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
 
    "plugins": [
        "plugins/markdown"
    ],
 
    "opts": {
        "encoding": "utf8",
        "destination": "docs/",
        "readme": "./README.md",
        "tutorials": "tutorials/",
        "recurse": true,
        "verbose": true,
        "private": false,
        "template": "./node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "title": "node-vt",
            "menu": [
                {
                    "title": "GitHub",
                    "link": "https://github.com/thetayloredman/node-vt/",
                    "target": "_blank"
                },
                {
                    "title": "Licence",
                    "link": "https://github.com/thetayloredman/node-vt/blob/main/LICENCE",
                    "target": "_blank"
                },
                {
                    "title": "Developer Mode",
                    "link": "dev"
                }
            ],
            "footer": "Copyright (C)   2020 Logan Devine<br /><b><a href=\"https://github.com/thetayloredman/node-vt/blob/main/LICENCE\" target=\"_blank\">Licence</a></b>"
        }
    }
}